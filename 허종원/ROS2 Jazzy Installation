###  기본 패키지 설치  ###
sudo apt update && sudo apt upgrade

##  gcc, g++, make, 등의 설치  ##
sudo apt install build-essential

## CMake 설치  ##
sudo apt install cmake

## curl 설치  ##
sudo apt install curl
curl --version


##  Locale 설정  ##
sudo apt update && sudo apt install locales
sudo locale-gen en_US en_US.UTF-8
sudo update-locale LC_ALL=en_US.UTF-8 LANG=en_US.UTF-8
export LANG=en_US.UTF-8
locale  # 설정 확인


## Ubuntu Universe 저장소 활성화  ##
sudo apt install software-properties-common
sudo add-apt-repository universe

##  ROS 2 GPG 키 추가  ##
# Copilot
sudo apt update && sudo apt install curl -y
sudo curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key -o /usr/share/keyrings/ros-archive-keyring.gpg
# ROS Home Page
sudo apt update && sudo apt install curl gnupg2 lsb-release
sudo curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key -o /usr/share/keyrings/ros-archive-keyring.gpg

## ROS 2 저장소를 sources list에 추가  ##
echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(lsb_release -cs) main" | sudo tee /etc/apt/sources.list.d/ros2.list > /dev/null

##  개발 도구 설치 (선택 사항)  ##
sudo apt update
sudo apt install ros-dev-tools

##  ROS 2 Jazzy 설치  ##
# Copilot
sudo apt update
sudo apt upgrade
sudo apt install ros-jazzy-desktop

#> ROS Home Page는 Packeage를 다운로드 받아서, tar로 압축해제
mkdir -p ~/ros2_dashing
cd ~/ros2_dashing
tar xf ~/Downloads/ros2-dashing-linux-x86_64.tar.bz2
#> ROS Home Page는 업츅해제 후, risdep를 설치 및 초기화
sudo apt update
sudo apt install -y python-rosdep
sudo rosdep init
rosdep update
#> ROS Home Page는 rosdep 철치 후, missing dependencies를 설치
rosdep install --from-paths ~/ros2_dashing/ros2-linux/share --ignore-src --rosdistro dashing -y --skip-keys "console_bridge fastcdr fastrtps libopensplice67 libopensplice69 osrf_testing_tools_cpp poco_vendor rmw_connext_cpp rosidl_typesupport_connext_c rosidl_typesupport_connext_cpp rti-connext-dds-5.3.1 tinyxml_vendor tinyxml2_vendor urdfdom urdfdom_headers"


## 설치 확인  ##
# Copilot
source /opt/ros/jazzy/setup.bash
ros2 run demo_nodes_cpp talker
ros2 run demo_nodes_py listener
# ROS Home Page에서는 Python Librat 등을 설치함

